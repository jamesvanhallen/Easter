<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/table"
    tools:context=".Easter">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"

        android:background="#000000"
        android:alpha="0.7"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Введите год"
            android:id="@+id/TextMain"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="45dp"

            android:textColor="#fffffd94" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/vvod"
            android:layout_below="@+id/TextMain"
            android:layout_centerHorizontal="true"
            android:background="#ffffe47c"
            android:textSize="35dp"

            android:textColor="#ff000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ввести"
            android:id="@+id/button"
            android:layout_below="@+id/vvod"
            android:layout_centerHorizontal="true"
            android:textColor="#fffffda9"
            android:textSize="30dp"
            android:onClick="onVivod" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/Vivod"
            android:layout_below="@+id/button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="#ffffd751" />


    </RelativeLayout>
</RelativeLayout>
